# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/
DB_NAME=flight_tracker

# Telegram bot settings
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Scraping settings
SCRAPER_TYPE=kayak  # kayak, skyscanner
SCRAPE_INTERVAL_MINUTES=30
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Flight search parameters
# Format: origin,destination;origin,destination
CITY_PAIRS=IST,JFK;IST,LHR;IST,LAX

# Format: YYYY-MM-DD;YYYY-MM-DD
DEPARTURE_DATES=2025-06-12;2025-06-15;2025-07-01
RETURN_DATES=2025-06-20;2025-06-25;2025-07-10

# Alert settings
PRICE_DROP_PERCENTAGE=10
PRICE_DROP_Z_SCORE=1.5
MAX_PRICE_TRY=33300

# Use real-time currency rates (from Yahoo Finance)
USE_REAL_TIME_CURRENCY_RATES=True

# Data retention settings (in days)
HISTORY_RETENTION_DAYS=90

# Debug mode
DEBUG=False

# Optional proxy settings
# PROXY=http://user:pass@host:port
